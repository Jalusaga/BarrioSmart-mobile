<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarrioSmartFront"
        android:usesCleartextTraffic="true">

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>


        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.BarrioSmartFront" >

        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.BarrioSmartFront"
            android:windowSoftInputMode="adjustResize">

        </activity>

        <activity
            android:name=".ui.authorities.AuthoritiesActivity"
            android:exported="true"
            android:label="Contacto Autoridades"
            android:theme="@style/Theme.BarrioSmartFront"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.community.CommunityActivity"
            android:exported="true"
            android:label="Comunidades"
            android:theme="@style/Theme.BarrioSmartFront"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.community.NewCommunityActivity"
            android:exported="true"
            android:label="Crear Comunidad"
            android:theme="@style/Theme.BarrioSmartFront"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.community.CommunityDetailsActivity"
            android:exported="true"
            android:label="Detalles Comunidad"
            android:theme="@style/Theme.BarrioSmartFront"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.report.ReportActivity"
            android:exported="true"
            android:label="Reportes"
            android:theme="@style/Theme.BarrioSmartFront"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.BarrioSmartFront">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <activity
            android:name=".ui.report.NewReportActivity"
            android:label="@string/title_new_report"
            android:theme="@style/Theme.BarrioSmartFront">
        </activity>
        <activity
            android:name=".ui.report.ReportDetailsActivity"
            android:label="@string/title_report_details"
            android:theme="@style/Theme.BarrioSmartFront">
        </activity>
    </application>

</manifest>